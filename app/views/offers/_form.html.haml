= simple_form_for @offer do |f|
  = f.collection_select :state_id, State.all, :id, :title, {prompt: "Where are you from?" }, class: "form-control"
  = f.input :title, label: "What are you selling?", input_html: {class: "form-control"}
  = f.input :description, label: "Give the details of your product", input_html: {class: "form-control"}
  = f.input :price, label: "How much will it cost?", input_html: {class: "form-control"}
  = f.input :photo, as: :file
  = f.button :submit, class: "btn btn-primary"
